{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "base_package": {
      "type": "string"
    },
    "files": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["NONE","INFO","WARNING","ERROR"],
          "default": "WARNING"
        },
        "naming": { "type": "string", "enum": [""]}
      },
      "required": ["strict", "naming"]
    },
    "directories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pattern": { "type": "string", "enum": ["LAYERED_ARCHITECTURE", "CUSTOM"] },
          "level": {
            "type": "string",
            "enum": ["NONE","INFO","WARNING","ERROR"],
            "default": "WARNING"
          },
          "base_package": {"type": "string"},
          "directories": {
            "$ref": "#/properties/directories"
          },
          "files": {
            "$ref": "#/properties/files"
          }
        },
        "required": ["pattern"]
      }
    }
  },
  "required": ["files", "directories"]
}
